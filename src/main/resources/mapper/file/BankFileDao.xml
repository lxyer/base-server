<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
        namespace="com.lxyer.base.modules.file.bankfile.dao.BankFileDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap
            type="com.lxyer.base.modules.file.bankfile.entity.BankFileEntity"
            id="bankFileMap">
        <result property="id" column="id"/>
        <result property="businessId" column="business_id"/>
        <result property="fileType" column="file_type"/>
        <result property="fileName" column="file_name"/>
        <result property="filePath" column="file_path"/>
        <result property="creatorId" column="creator_id"/>
        <result property="editorId" column="editor_id"/>
        <result property="createdTime" column="created_time"/>
        <result property="modifiedTime" column="modified_time"/>
    </resultMap>
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap
            type="com.lxyer.base.modules.notarizationapply.businessfile.entity.BusinessFileEntity"
            id="BusinessFileMap">
        <result property="id" column="id"/>
        <result property="businessId" column="business_id"/>
        <result property="fileType" column="file_type"/>
        <result property="fileName" column="file_name"/>
        <result property="filePath" column="file_path"/>
        <result property="creatorId" column="creator_id"/>
        <result property="editorId" column="editor_id"/>
        <result property="createdTime" column="created_time"/>
        <result property="modifiedTime" column="modified_time"/>
    </resultMap>

    <sql id="Base_Column_List">
		id , business_id , file_type , file_name , file_path , creator_id ,
		editor_id , created_time , modified_time
	</sql>
    <sql id="Business_File_List">
		id , business_id ,  file_name , file_path , creator_id ,
		editor_id , created_time , modified_time
	</sql>


    <select id="queryPage"
            parameterType="com.lxyer.base.modules.file.bankfile.vo.BankFileSearchVo"
            resultMap="bankFileMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bank_file
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="businessId != null">AND `business_id` = #{businessId}</if>
            <if test="fileType != null">AND `file_type` = #{fileType}</if>
            <if test="fileName != null">AND `file_name` = #{fileName}</if>
            <if test="filePath != null">AND `file_path` = #{filePath}</if>
            <if test="creatorId != null">AND `creator_id` = #{creatorId}</if>
            <if test="editorId != null">AND `editor_id` = #{editorId}</if>
            <if test="createdTime != null">AND `created_time` = #{createdTime}</if>
            <if test="modifiedTime != null">AND `modified_time` = #{modifiedTime}</if>
        </trim>
    </select>
    <select id="getFileByBusinessId"
            resultMap="BusinessFileMap">
        SELECT
        <include refid="Business_File_List"/>,
        '2' as file_type
        FROM bank_file
        WHERE
        `business_id` = #{businessId}
    </select>


</mapper>
